{
  "safe": {
    "_comment": "Auto-approve these commands — skip Slack entirely",
    "prefixes": [
      "ls",
      "find",
      "cat",
      "head",
      "tail",
      "wc",
      "echo",
      "date",
      "pwd",
      "which",
      "git status",
      "git log",
      "git diff",
      "git branch",
      "python3 -c",
      "python3 --version",
      "python --version",
      "node --version",
      "npm --version",
      "sf data query",
      "du",
      "df",
      "tree",
      "stat",
      "file",
      "diff",
      "env",
      "printenv",
      "whoami",
      "hostname",
      "uname",
      "grep",
      "rg",
      "sort",
      "uniq",
      "basename",
      "dirname",
      "realpath",
      "readlink",
      "test",
      "[",
      "true",
      "false"
    ]
  },
  "risky": {
    "_comment": "Post to Slack for approval",
    "prefixes": [
      "rm",
      "mv",
      "chmod",
      "chown",
      "git push",
      "git reset",
      "git checkout",
      "git rebase",
      "git clean",
      "npm install",
      "npm ci",
      "pip install",
      "npm publish",
      "docker rm",
      "docker stop",
      "kill",
      "pkill",
      "sudo",
      "sf project deploy",
      "sed -i",
      "apt",
      "apt-get",
      "brew",
      "cp"
    ],
    "patterns": [
      "curl .* -X\\s*(POST|PUT|DELETE|PATCH)",
      "curl .* --request\\s*(POST|PUT|DELETE|PATCH)",
      "> ",
      ">> "
    ]
  },
  "deny": {
    "_comment": "Always block these — too dangerous",
    "patterns": [
      "rm\\s+-rf\\s+/\\s*$",
      "rm\\s+-rf\\s+/\\*",
      "chmod\\s+777",
      "dd\\s+if=.*of=/dev/",
      "mkfs\\.",
      ":(){ :|:& };:"
    ]
  }
}
